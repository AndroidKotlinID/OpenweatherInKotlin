<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    >
  <ImageView
      android:id="@+id/imgItem"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginRight="16dp"
      tools:src="@drawable/ic_cloud_red_200_24dp"
      />

  <TextView
      android:id="@+id/tvItemDate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@id/imgItem"
      android:fontFamily="sans-serif-medium"
      android:textSize="18sp"
      tools:text="29 Dec 2017"
      />
  <TextView
      android:id="@+id/tvItemWeather"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/tvItemDate"
      android:layout_toRightOf="@id/imgItem"
      android:textSize="16sp"
      tools:text="Cloud"
      />
  <TextView
      android:id="@+id/tvItemTemperatureMax"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:fontFamily="sans-serif-medium"
      android:text="29"
      android:textSize="22sp"
      />
  <TextView
      android:id="@+id/tvItemTemperatureMin"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_below="@id/tvItemTemperatureMax"
      android:text="22"
      />

</RelativeLayout>